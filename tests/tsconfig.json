{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "types": ["node", "mocha"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "**/node_modules/**",
    "**/dist/**"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
