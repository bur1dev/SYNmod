    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "typescript": "4.2.4"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  }
